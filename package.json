{
  "name": "sheriff",
  "version": "5.0.0",
  "description": "Enforce Conventional Commits on pull request titles like a true sheriff",
  "private": true,
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/teneplaysofficial/sheriff.git"
  },
  "author": {
    "name": "Sriman",
    "email": "136729116+TenEplaysOfficial@users.noreply.github.com"
  },
  "keywords": [
    "conventional-commits",
    "pull-request",
    "title-check",
    "commit-lint",
    "pr-lint",
    "pr-validator",
    "semantic-release",
    "git",
    "workflow",
    "automation"
  ],
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "prepare": "husky",
    "release": "release-it",
    "test": "npx -y c8 node --test",
    "build": "esbuild src/index.js --bundle --minify --platform=node --format=esm --banner:js=\"import { createRequire } from 'module'; const require = createRequire(import.meta.url);\" --outfile=dist/index.js",
    "fix": "biome check --write",
    "lint": "biome check"
  },
  "lint-staged": {
    "*.{ts,js,json}": [
      "biome check --write --no-errors-on-unmatched"
    ]
  },
  "release-it": {
    "git": {
      "requireCleanWorkingDir": false,
      "commitMessage": "chore: release v${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": false
    },
    "github": {
      "release": true
    },
    "hooks": {
      "before:init": "yarn build",
      "before:commit": "git add .",
      "after:release": "node scripts/tag-major.js"
    }
  },
  "dependencies": {
    "@actions/core": "^3.0.0",
    "@actions/github": "^9.0.0",
    "@js-utils-kit/constants": "^0.2.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.13",
    "@types/node": "^24.3.0",
    "esbuild": "^0.27.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "release-it": "^19.0.4"
  }
}
