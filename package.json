{
  "name": "sheriff",
  "version": "4.0.0",
  "description": "Enforce Conventional Commits on pull request titles like a true sheriff",
  "private": true,
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/teneplaysofficial/sheriff.git"
  },
  "author": {
    "name": "Sriman",
    "email": "136729116+TenEplaysOfficial@users.noreply.github.com"
  },
  "keywords": [
    "conventional-commits",
    "pull-request",
    "title-check",
    "commit-lint",
    "pr-lint",
    "pr-validator",
    "semantic-release",
    "git",
    "workflow",
    "automation"
  ],
  "main": "dist/index.js",
  "scripts": {
    "prepare": "husky",
    "release": "release-it",
    "test": "node tests/index.test.js",
    "prebuild": "yarn test && yarn sort",
    "build": "esbuild src/index.js --bundle --minify --platform=node --outfile=dist/index.js",
    "sort": "node scripts/sort-and-clean-json.js",
    "lint": "eslint --ignore-pattern \"dist/*\"",
    "lint:fix": "eslint --fix --ignore-pattern \"dist/*\" .",
    "format": "prettier --write"
  },
  "lint-staged": {
    "*.{js,ts,json,md,yaml,yml}": "yarn format",
    "*.{ts}": "yarn lint"
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all",
    "tabWidth": 2
  },
  "release-it": {
    "git": {
      "requireCleanWorkingDir": false,
      "commitMessage": "chore: release v${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": false
    },
    "github": {
      "release": true
    },
    "hooks": {
      "before:init": "yarn prebuild && yarn build",
      "before:commit": "git add .",
      "after:release": "node scripts/tag-major.js"
    }
  },
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/github": "^6.0.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@eslint/json": "^0.14.0",
    "@eslint/markdown": "^7.1.0",
    "@types/node": "^24.3.0",
    "esbuild": "^0.27.0",
    "eslint": "^9.33.0",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "prettier": "^3.6.2",
    "release-it": "^19.0.4"
  }
}
